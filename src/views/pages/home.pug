extends ../layouts/master.pug

block title
  title My Page - Blog

block basicSeo
  meta(name='description' content='Blog page')
  meta(name='keywords', content='blog, page')
  meta(name='author' content='')

block manifestBrowserconfigFiles
  link(rel='manifest', href='../manifest.json')
  meta(name='msapplication-config' content='../browserconfig.xml')

block content

  section.start
    img(src=require("images/bg-01.png")).start__bg
    .start__sportmen
      img(src=require("images/start-01.png"))
    .start__title
      img(src=require("images/title-banner.svg"))
      .start__title-text
        h1 Фитнес-клуб
        p в центре Белгорода
        a.btn.btn-primary записаться
  section.photo
    .photo__title
      .container
        .row
          .col-12
            h2 Фотографии и видео клуба
            p!="Клуб открыт в 2021 году и оснащен всем необходимым оборудованием<br> для комфортных занятий. Вам точно у нас понравится!"
    .photo__slider
      .swiper.photo__swiper
        .swiper-wrapper
          .swiper-slide.photo__slide
            img(src=require("images/photo-01.png"))
            .container
              p кардио зона
          .swiper-slide.photo__slide
            img(src=require("images/photo-01.png"))
            .container
              p кардио зона
          .swiper-slide.photo__slide
            img(src=require("images/photo-01.png"))
            .container
              p кардио зона
        .container.position-relative
          .photo__slider-nav
            .photo__slider-prev.slider-prev
            .photo__slider-next.slider-next
  section.popular
    .container
      .row
        .col-12
          .popular__header
            .popular__num 6
            .popular__title
              h2!="В нашем клубе предоставлено <span>популярных направлений</span>"
          .popular__dec
            p Узнайте подробнее о каждом из них.
    .popular__items
      .container-fluid.popular__container
        .row.popular__row
          .popular__slider.swiper
            .swiper-wrapper
              +popular-item(require("images/popular-01.png"), "кроссфит")
              +popular-item(require("images/popular-01.png"), "Хатха йога")
              +popular-item(require("images/popular-01.png"), "functional")
              +popular-item(require("images/popular-01.png"), "Единоборства")
              +popular-item(require("images/popular-01.png"), "Персональные тренировки")
              +popular-item(require("images/popular-01.png"), "Здоровая спина")
              +popular-item(require("images/popular-01.png"), "full body")
              +popular-item(require("images/popular-01.png"), "Стретчинг")
              +popular-item(require("images/popular-01.png"), "Body pump")
  section.subscription
    .container
      .row
        .col-12
          h2.subscription__title!="У нас очень приятные цены<br> на покупку абонементов"
          p.subscription__dec Выберите подходящий и оплатите онлайн
  section.schedule
    .container
      .row
        .col-12
          .schedule__title
            h2 Расписание
            p Мы ждем вас еженевно Пн-Пт с 07:00 до 23:00; Сб-Вс с 09:00 до 21:00.
            p Актуальное расписание групповых занятий представлено на сайте.
  section.stock
    .container
      .row
        .col-12
          .stock__head
            .stock__title
              h2 Акции
              p!="Самые выгодные предложения для занятий в нашем<br>фитнес-клубе. Успейте воспользоваться!"
            .stock__slider-btn
              .stock__slider-prev.slider-prev
              .stock__slider-next.slider-next
        .col-12
          .stock__swiper.swiper
            .swiper-wrapper
              .swiper-slide
                img(src=require("images/stock01.png"))
              .swiper-slide
                img(src=require("images/stock01.png"))
              .swiper-slide
                img(src=require("images/stock01.png"))
              .swiper-slide
                img(src=require("images/stock01.png"))
              .swiper-slide
                img(src=require("images/stock01.png"))
              .swiper-slide
                img(src=require("images/stock01.png"))
              .swiper-slide
                img(src=require("images/stock01.png"))
              .swiper-slide
                img(src=require("images/stock01.png"))
  section.trainer
    .container
      .row
        .trainer__box
          .trainer__head
            h2 Марафон преображения
            p Интенсивная работа над собой за 4 недели.
          .trainer__fact
            +fact-item(require("images/fact/fact01.png"), "Персональные тренировки")
            +fact-item(require("images/fact/fact02.png"), "Работа с психологом")
            +fact-item(require("images/fact/fact03.png"), "Диетолог")
            +fact-item(require("images/fact/fact04.png"), "Массаж")
            +fact-item(require("images/fact/fact05.png"), "Растяжка ")
          .trainer__footer
            .trainer__price
              span Стоимость
              p 9 000
                small ₽
            .trainer__date
              span Старт
              p 1 июля 2020г.
            a(href="#").btn.btn-primary подробнее
      .row
        .trainer__head-two
          h2 Тренеры
          p В фитнес-клубе Gold Gym собран один из лучших тренерских составов в Белгороде\
      .row.trainer__box-two
        +trainer-item
        +trainer-item
        +trainer-item
        +trainer-item
        +trainer-item
        +trainer-item
        +trainer-item
        +trainer-item
